<div class="row auth-panel">
  <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3">
    <div class="login">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-login'}) do |f| %>
        <h2 class="form-login-heading">Please log in</h2>
        <%= f.label :email, class: 'sr-only', for: 'inputEmail' %>
        <%= f.email_field :email, class: 'form-control login-form', id: 'inputEmail', placeholder: 'Email address', required: true, autofocus: true %>
        <%= f.label :password, class: 'sr-only', for: 'inputPassword' %>
        <%= f.password_field :password, class: 'form-control login-form', id: 'inputPassword', placeholder: 'Password', required: true, autocomplete: 'off' %>
        <% if devise_mapping.rememberable? -%>
          <div class="checkbox remember">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, class: 'remember-label' %>
          </div><!-- /checkbox -->
        <% end -%>

        <%= f.submit 'Log in', class: 'btn btn-lg btn-primary btn-block login-form' %>
      <% end %>

      <div class="auth-links">
        <%= render "devise/shared/links" %>
      </div>
    </div><!-- /login -->
  </div><!-- /col -->
</div><!-- /row -->
